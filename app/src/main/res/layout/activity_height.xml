<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HeightActivity">

    <TextView
            android:text="身長"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/textView"/>
    <TextView
            android:text="170"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/height" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="126dp"/>
    <Spinner
            android:layout_width="100dp"
            android:layout_height="48dp" tools:layout_editor_absoluteY="215dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/spinner" android:entries="@array/txt_height_arr"/>
    <SeekBar
            android:layout_width="343dp"
            android:layout_height="36dp"
            android:id="@+id/seekBar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:max="200" android:progress="160"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>