<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/droidImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="78dp"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/neck"
            android:hint="首回り" android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:gravity="center_horizontal" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/droidImage" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/droidImage"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/waist"
            android:hint="胴回り" android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:gravity="center_horizontal" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/droidImage" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/droidImage"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/sleeve"
            android:hint="裄丈" android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/droidImage" app:layout_constraintStart_toEndOf="@+id/droidImage"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/droidImage"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/inseam"
            android:hint="股下" android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:gravity="center_horizontal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/droidImage"
            app:layout_constraintEnd_toEndOf="@+id/droidImage" app:layout_constraintStart_toStartOf="@+id/droidImage"/>
    <Button
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="393dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/save"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_height" tools:layout_editor_absoluteY="3dp"
            tools:layout_editor_absoluteX="325dp" android:id="@+id/heightButton"/>

</android.support.constraint.ConstraintLayout>